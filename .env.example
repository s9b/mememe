# OpenAI API Key for generating meme captions
OPENAI_API_KEY=your_openai_api_key_here

# Imgflip credentials for meme generation
IMGFLIP_USER=your_imgflip_username_here
IMGFLIP_PASS=your_imgflip_password_here

# Cloudinary configuration for image storage
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_URL=cloudinary://${CLOUDINARY_API_KEY}:${CLOUDINARY_API_SECRET}@${CLOUDINARY_CLOUD_NAME}

# Google AdSense ID (optional)
NEXT_PUBLIC_ADSENSE_ID=your_adsense_id_here

# Stripe API Keys for payments (optional)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
NEXT_PUBLIC_STRIPE_PRICE_ID=your_stripe_price_id_here

# Redis URL for rate limiting (optional, falls back to in-memory LRU cache)
REDIS_URL=redis://localhost:6379

# Sentry DSN for error monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# PostHog API key for analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_api_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
# Set to true to enable PostHog in development
NEXT_PUBLIC_POSTHOG_DEBUG=false
